@model IEnumerable<Domains.Models.PartBicycle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Список</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuantityRequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bicycle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Part)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityRequired)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bicycle.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Part.PartName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PartBicycleId">Обновить</a> |
                <a asp-action="Details" asp-route-id="@item.PartBicycleId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.PartBicycleId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
